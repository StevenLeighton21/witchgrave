<div class="col-xs-12 .col-sm-6 .col-md-8", id="content">  
	
	<div class="col-md-6 col-md-offset-3">
	<p id="notice"><%= notice %></p>

	
		<%= gravatar_for @user %>
		<p>
	  		<%= @user.name %>
		</p>
	</div>
</div>

<div class="col-xs-12 .col-sm-6 .col-md-8", id="content">
	<div class="col-md-6 col-md-offset-3">	
		<% if @user.campaigns.any? %>

		<ol class="campaigns">
		  <%= render @campaigns %>
		</ol>
		<%= will_paginate @campaigns %>

		<% end %>

		<% if @user.id == current_user.id %>
			<div class="col-md-3 col-md-offset-3">	
			<%= link_to "Create New Campaign", create_campaigns_path, class: "btn btn-lg btn-primary" %>
			</div>
		<% end %>

	</div>
</div>