<div class="center jumbotron">
  <h1>Frostgrave</h1>

  <h2>
    Campaign management app
  </h2>
  <% if current_user == nil %>
  	<%= link_to "Create account", signup_path, class: "btn btn-lg btn-primary" %>
  <% else %>
    <div class="row">
      <div class="col-md-4" id="home_button">
  	    <%= link_to "My Dashboard", current_user, class: "btn btn-lg btn-primary" %>
      </div>
      <div class="col-md-4 .col-md-offset-2" id="home_button">
        <%= link_to "Join Existing Campaign", campaigns_path, class: "btn btn-lg btn-primary" %>
      </div>
      <div class="col-md-4 .col-md-offset-4" id="home_button">
        <%= link_to "Create New Campaign", create_campaigns_path, class: "btn btn-lg btn-primary" %>
      </div>
  <% end %>
</div>

