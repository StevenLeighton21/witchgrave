<div class="col-xs-12 .col-sm-6 .col-md-8", id="content">  
<p id="notice"><%= notice %></p>

<h1>
  <%= @tournaments.name %>
</h1>

<div>

<h2>Participants in this tournament:</h2>

<!-- TODO user fragment that shows each one -->
<% @participants.each do |p| %>
	<%= link_to p.name, User.find(p.user_id) %>
<% end %>

<% if @tournaments.user_id == current_user.id %>
	<%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe, edit_tournament_path(@tournaments.id), class: "btn btn-default" %>
	
	<%= link_to '<i class="glyphicon glyphicon-remove-sign"></i>'.html_safe, delete_tournament_path(:id => @tournaments.id), method: :delete,
                                       data: { confirm: "Are you sure?" } , class: "btn btn-default"%>

<% end %>
</div>
</div>